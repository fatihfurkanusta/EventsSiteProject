@model EntityLayer.Concrete.User

@{
    ViewBag.Title = "AddUser2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="services-two bg-1 padd-3">
    <div class="container">
        <br />
        <h1 class="text-center">Üye Ol</h1>
        <br />

        @using (Html.BeginForm("AddUser2", "User", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Kullanıcı Adı")
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UserName)
                <br />
                @Html.Label("Kullanıcı Soy Adı")
                @Html.TextBoxFor(x => x.UserSurname, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UserSurname)
                <br />
                @Html.Label("Kullanıcı Maili")
                @Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UserEmail)
                <br />
                @Html.Label("Kullanıcı Parolası")
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password)
                <br />
                <button class="btn btn-info">Üye Ol</button>

            </div>
        }

        <p class="w-100 text-center">@ViewBag.UserReport</p>


    </div>
</section>



