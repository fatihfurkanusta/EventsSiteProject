@using EntityLayer.Concrete
@model List<Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = "";}
@{ string status = "";}

<html>

<body class="hold-transition sidebar-mini">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Etkinlik İşlemleri</h1>
                </div>
            </div>
        </div>
    </section> <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Onay Bekleyenler</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0"> 
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%" class="text-center">
                                #
                            </th>
                            <th style="width: 20%" class="text-center">
                                Etkinlik Adı
                            </th>
                            <th style="width: 20%" class="text-center">
                                Lokasyonu
                            </th>
                            <th style="width: 15%" class="text-center">
                                Açıklama
                            </th>
                            <th style="width: 10%" class="text-center">
                                Kontenjan
                            </th>
                            <th style="width: 25%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 15%" class="text-center">
                                Oluşturan Kullanıcı
                            </th>

                            <th style="width: 30%">
                            </th>
                        </tr>
                    </thead>
                    @Html.Action("AllowEventPartial","Event")
                </table>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tüm Etkinlikler</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%" class="text-center">
                                #
                            </th>
                            <th style="width: 15%" class="text-center">
                                Etkinlik Adı
                            </th>
                            <th style="width: 15%" class="text-center">
                                Lokasyonu
                            </th>
                            <th style="width: 15%" class="text-center">
                                Açıklama
                            </th>
                            <th style="width: 10%" class="text-center">
                                Kontenjan
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 15%" class="text-center">
                                Oluşturan Kullanıcı
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 30%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-warning";

                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                color = "badge badge-success";

                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "badge badge-info";

                            }

                            if (item.EventStatus == true)
                            {
                                status = "badge badge-success";

                            }
                            if (item.EventStatus == false)
                            {
                                status = "badge badge-danger";

                            }

                            <tr class="text-center">
                                <td>
                                    @item.EventId
                                </td>
                                <td>
                                    <a>
                                        @item.EventName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.EventDate).ToString("dd/MMM/yyyy - hh:mm"))
                                    </small>
                                </td>
                                <td class="text-center">
                                    @item.EventLoc
                                </td>
                                <td>
                                    @item.EventDescription
                                </td>
                                <td class="text-center">
                                    @item.EventQuota
                                </td>
                                <td>
                                    <a class="@status">
                                        @item.EventStatus
                                    </a>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a>
                                                @item.User.UserName
                                            </a>
                                        </li>
                                    </ul>
                                </td>

                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        İncele
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Event/EditEvent/@item.EventId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Event/DeleteEvent/@item.EventId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
<a href="/Event/AddEvent/" class="btn btn-primary">Etkinlik Ekle</a>





