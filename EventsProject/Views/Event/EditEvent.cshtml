@model EntityLayer.Concrete.Event

@{
    ViewBag.Title = "EditEvent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Etkinlik Güncelleme</h2>
@using (Html.BeginForm("EditEvent", "Event", FormMethod.Post))
{

    <div class="form-group">
        @Html.HiddenFor(x => x.EventId, new { @class = "form-control" })
        @Html.Label("Etkinlik Adı")
        @Html.TextBoxFor(x => x.EventName, new { @class = "form-control" })
        <br />
        @Html.Label("Etkinlik Tarihi")
        @Html.TextBoxFor(x => x.EventDate, new { @class = "form-control" })


        <br />

        @Html.Label("Etkinlik Açıklaması")
        @Html.TextBoxFor(x => x.EventDescription, new { @class = "form-control" })
        <br />
        @Html.Label("Etkinlik Lokasyonu")
        @Html.DropDownListFor(x => x.EventLoc, (List<SelectListItem>)ViewBag.city, new { @class = "form-control" })
        <br />
        @Html.Label("Etkinlik Kontenjanı")
        @Html.TextBoxFor(x => x.EventQuota, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        @Html.Label("Etkinlik Oluşturucusu")
        @Html.TextBoxFor(x => x.UserID, new { @class = "form-control" })
        <br />

        <button class="btn btn-success">Güncelle</button>

    </div>
}

