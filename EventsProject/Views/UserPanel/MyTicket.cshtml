@using EntityLayer.Concrete
@model List<Ticket>

@{
    ViewBag.Title = "MyEvent";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<section class="service-single">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @Html.Action("UserProfilePartial", "UserPanel")
            </div>
            <div class="col-md-9">
                <div class="outer-box">
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1>Biletlerim</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="content">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Bilet İşlemleri</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr>
                                            <th style="width: 1%">
                                                #
                                            </th> 
                                            <th style="width: 20%" class="text-center">
                                                Etkinlik Adı
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Açıklama
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Bilet Numarası
                                            </th>
                                            <th style="width: 8%" class="text-center">
                                                Kategori
                                            </th>
                                            <th style="width: 20%">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {


                                            <tr>
                                                <td class="text-center">
                                                    @item.e.EventId
                                                </td>
                                                <td class="text-center">
                                                    <a>
                                                        @item.e.EventName
                                                    </a>
                                                    <br />
                                                    <small>
                                                        @(((DateTime)item.e.EventDate).ToString("dd/MMM/yyyy - hh:mm"))
                                                    </small>
                                                </td>
                                                <td class="text-center">
                                                    @item.e.EventDescription
                                                </td>

                                                <td class="text-center">
                                                    @item.TicketNumber
                                                </td>

                                                <td class="project-state text-center">
                                                    <span class="badge badge-warning">@item.e.Category.CategoryName</span>
                                                </td>

                                             

                                                <td class="project-actions text-right">
                                                    
                                                    <a class="btn btn-info btn-sm" href="#">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        PDF Olarak İndir
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </div>
</section>


