@using EntityLayer.Concrete
@model List<Event>

@{
    ViewBag.Title = "MyEvent";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



@{ string color = "";}

<section class="service-single">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @Html.Action("UserProfilePartial", "UserPanel")
            </div>
            <div class="col-md-9">
                <div class="outer-box">
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1>Etkinliklerim</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="content text-center">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Etkinlik İşlemleri</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr class="text-center">
                                            <th style="width: 1%">
                                                #
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Etkinlik Adı
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Açıklama
                                            </th>
                                            <th style="width: 15%" class="text-center">
                                                Kontenjan
                                            </th>
                                            <th style="width: 8%" class="text-center">
                                                Kategori
                                            </th>
                                            <th style="width: 30%" class="text-center">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            if (item.Category.CategoryName == "Tiyatro")
                                            {
                                                color = "badge badge-warning";

                                            }
                                            if (item.Category.CategoryName == "Spor")
                                            {
                                                color = "badge badge-success";

                                            }
                                            if (item.Category.CategoryName == "Yazılım")
                                            {
                                                color = "badge badge-info";

                                            }

                                            <tr>
                                                <td>
                                                    @item.EventId
                                                </td>
                                                <td>
                                                    <a>
                                                        @item.EventName
                                                    </a>
                                                    <br />
                                                    <small>
                                                        @(((DateTime)item.EventDate).ToString("dd/MMM/yyyy - hh:mm"))
                                                    </small>
                                                </td>
                                                <td>
                                                    @item.EventDescription
                                                </td>
                                                <td>
                                                    @item.EventQuota
                                                </td>

                                                <td class="project-state">
                                                    <span class="@color">@item.Category.CategoryName</span>
                                                </td>
                                                <td class="project-actions text-right">
                                                    <a class="btn btn-primary btn-sm" href="#">
                                                        <i class="fas fa-folder">
                                                        </i>
                                                        İncele
                                                    </a>
                                                    <a class="btn btn-info btn-sm" href="/UserPanel/EditEvent/@item.EventId">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </section>

                    <a class="btn btn-primary" href="/UserPanel/NewEvent/">Etkinlik Oluştur</a>

                </div>
            </div>
        </div>
    </div>
</section>




