@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>

<body class="hold-transition sidebar-mini">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategori İşlemleri</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tüm Etkinlikler</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%" class="text-center">
                                #
                            </th>
                            <th style="width: 15%" class="text-center">
                                Kategori Adı
                            </th>
                            <th style="width: 15%" class="text-center">
                                Kategori Açıklaması
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class="text-center">
                                <td>
                                    @item.CategoryID
                                </td>
                                <td>
                                    @item.CategoryName

                                </td>
                                <td class="text-center">
                                    @item.CategoryDescription
                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" href="/AdminCategory/EditCategory/@item.CategoryID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@item.CategoryID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <a href="/AdminCategory/AddCategory/" class="btn btn-primary">Kategori Ekle</a>
    <br />

    <section class="content">
        <br />
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">Tüm Şehirler</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%" class="text-center">
                                #
                            </th>
                            <th style="width: 15%" class="text-center">
                                Şehir Adı
                            </th>
                        </tr>
                    </thead>
                    @Html.Action("CityPartial", "AdminCategory")

                </table>
            </div>
        </div>
    </section>
    <a href="/AdminCategory/AddCity/" class="btn btn-primary">Şehir Ekle</a>
</body>
</html>

